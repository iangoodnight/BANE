<h1>Admin</h1>

<div class="row">
  {{#each people}}
  <div class="col-md-12">
    <pre>{{this.username}}</pre>
  </div>
  {{/each}}
</div>  

<p>Create User</p>

<form class="signup">
  <div class="form-group">
    <label for="employeeId-input">Employee ID</label>
    <input type="text" class="form-control" id="employeeId-input" aria-describedby="employeeIdHelp" placeholder="Enter Employee ID">
    <small id="employeeIdHelp" class="form-text text-muted">Please enter employee ID.</small>
  </div>
  <div class="form-group">
    <label for="username-input">Username</label>
    <input type="text" class="form-control" id="username-input" aria-describedby="usernameHelp" placeholder="Enter Username">
    <small id="UsernameHelp" class="form-text text-muted">Please enter username.</small>
  </div>
  <div class="form-group">
    <label for="password-input">Password</label>
    <input type="password" class="form-control" id="password-input" placeholder="Password">
  </div>
  <div style="display: none" id="alert" class="alert alert-danger" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only">Error:</span> <span class="msg"></span>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<div id="user-space">
    {{!-- Render user info here --}}
</div>

